{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "eslint-config-prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-await-in-loop": "off",
        "no-unsafe-finally":"off",
        "no-restricted-syntax": "off",
        "prefer-destructuring":"off",
        "global-require": "off",
        "no-return-await": "off",
        "prettier/prettier": "error",
        "comma-dangle": 0,
        "import/extensions": [
            "error",
            "ignorePackages"
          ],
          "camelcase": "warn",
          "no-console": "off",
          "import/prefer-default-export": "off",
          "no-shadow": "off",
          "linebreak-style": "off",
          "indent": [2, 2, { "SwitchCase": 1 }],
          "no-unused-vars": "warn",
          "func-names": "off",
          "no-process-exit": "off",
          "object-shorthand": "off",
          "class-methods-use-this": "off"

    }
}